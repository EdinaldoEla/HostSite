    <div class="col-md-6 mt-3">
        <img src="~/imagens/img1.png" class="d-bloc w-100">
    </div>
</div>

<div class="row">
    <div class="col-md-6 mt-2">
        <div class="card border-primary">
            <h2 class="ml-2">Entre em contato!:</h2>
            <h6 class="text-justify ml-2">Nos mande uma mensagem e fique por dentro de nossos eventos</h6>
            <p class="text-danger"> @ViewData["Mensagem"]</p>

            <form action="/Home/Cadastrar" method="POST">
                <div class="form-group ml-2 mr-2">
                    <label asp-for="Nome">Nome:</label>
                    <input asp-for="Nome" class="form-control" required />
                </div>

                <div class="form-group ml-2 mr-2">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" class="form-control" required />
                </div>
                <div class="form-group ml-2 mr-2">
                    <label asp-for="Mensagem">Mensagem (Opcional)</label>
                    <textarea asp-for="Mensagem" class="form-control"></textarea>
                </div>
                <div class="form-group ml-2 mB-2">
                    <input type="submit" value="Enviar" class="btn btn-primary btn-lg mt-2" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6 mt-2">
        <div class="card-group">
            <div class="card">
                <img src="imagens/img2.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Consulte nossa agenda de eventos e encontre o que melhor se adapta a sua
                        realidade.</h5>
                </div>
                <div class="card-footer">
                    <a href="#" data-toggle="modal" data-target=#Agenda>Agenda de eventos</a>
                </div>
            </div>
            <div class="card ml-2">
                <img src="imagens/img3.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Conheça as dicas que preparamos para que você tenha uma Vida saudável.</h5>
                </div>
                <div class="card-footer">
                    <a href="#" data-toggle="modal" data-target=#Apoiadores>Lista de Apoiadores</a>
                </div>
            </div>
            <div class="card ml-2">
                <img src="imagens/img4.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Nossos Apoiadores estão prontos a te dar o suporte que você precisa.</h5>
                </div>
                <div class="card-footer">
                    <a href="#" data-toggle="modal" data-target=#Dicas>Dicas de vida saudável</a>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Modal -->
